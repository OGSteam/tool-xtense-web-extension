{
  "env": {
    "browser": true,
    "es6": true,
    "webextensions": true
  },
  "plugins": [
    "jquery"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:jquery/deprecated",
    "plugin:jquery/slim"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly",
    "chrome": true
  },
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "rules": {
    "jquery/no-ajax": "warn",
    "jquery/no-animate": "warn",
    "jquery/no-attr": "warn",
    "jquery/no-class": "warn",
    "jquery/no-clone": "warn",
    "jquery/no-css": "warn",
    "jquery/no-data": "warn",
    "jquery/no-deferred": "warn",
    "jquery/no-fade": "warn",
    "jquery/no-html": "warn",
    "jquery/no-is": "warn",
    "jquery/no-each": "warn",
    "jquery/no-param": "warn",
    "jquery/no-serialize": "warn",
    "jquery/no-ready": "warn",
    "jquery/no-slide": "warn",
    "jquery/no-text": "warn",
    "jquery/no-trigger": "warn",
    "jquery/no-val": "warn",
    "jquery/no-wrap": "warn"
  }
}
