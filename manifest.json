{
  "manifest_version": 2,
  "name": "Xtense GM",
  "version": "2.6.9.12",
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "description": "Gets information from a spacecraft game.",
  "icons": { "128": "Xtense-128.png" },
  "content_scripts": [
    {
      "matches": ["https://*.ogame.gameforge.com/game/*"],
      "js": ["contribs/jquery-2.2.0.min.js",
			 "parsers/OgameLocales.js",
			 "parsers/OgameConstants.js",
			 "parsers/Ogame.js",
             "contribs/crypto.js",
             "ui/menu_item.js",
			 "ogspy/send_data.js",
			 "xtense.user.js"],
	  "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    "images/*.png"
  ],
  "background": {
    "page": "background.html"
  },
  //"permissions": [
  //      "http://*/",
  //      "https://bitbucket.org/*"
   //],

  "permissions": [ "notifications",
    "unlimited_storage",
    "tabs",
    "management",
    "webNavigation",
    "webRequest", "webRequestBlocking",
    "<all_urls>" ],

  "short_name": "Xtense",
  "browser_action": {
    "default_title": "Xtense",
    "default_icon": "xtense.png",
    "default_popup": "xtense.html"
  }

}
