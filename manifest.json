{
  "manifest_version": 2,
  "name": "Xtense GM",
  "version": "2.5.6.3",
  "description": "Gets information from a spacecraft game.",
  "icons": { "128": "Xtense-128.png" },
  "content_scripts": [
    {
      "matches": ["http://*.ogame.gameforge.com/game/*"],
      "js": ["xtense.user.js"],
	  "run_at": "document_idle"
    }
  ],  
  "background": {
    "persistent": false,
    "scripts": ["xtense.user.js"]
  },
  "permissions": [
        "http://*/",
        "https://bitbucket.org/*"
   ],
  "short_name": "Xtense",
  "browser_action": {
    "default_title": "Xtense",
    "default_icon": "xtense.png",
    "default_popup": "xtense.html"
  }
}
